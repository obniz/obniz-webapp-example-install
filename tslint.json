{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-plugin-prettier"
  ],
  "jsRules": {},
  "rules": {
    "prettier": [true, {
      "trailingComma": "all",
      "arrowParens": "always",
      "quoteProps": "consistent",
      "printWidth": 120
    }],
    "no-console": [
      false
    ],
    "class-name": false,
    "radix": false, 
    "no-empty": false, 
    "no-var-requires": false, 
    "prefer-for-of" : false, 
    "forin": false, 
    "no-misused-new": false, 
    "no-namespace": false, 
    "max-line-length" : false, 
    "no-empty-interface": false,
    "indent": [true, "spaces", 2],
    "interface-name": [false],
    "no-bitwise": [false],
    "variable-name": false,
    "object-literal-sort-keys" : false
  },
  "rulesDirectory": [],
  "linterOptions": {
    "exclude": [
      "src/webpack-replace/*.js",
      "dist"
    ]
  }
}